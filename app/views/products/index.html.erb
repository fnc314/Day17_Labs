<h1>Products</h1>

<table class="table table-hover">

	<th class="tablelabel">Product Name</th>
	<th class="tablelabel">Price</th>
	<!-- <th class="tablelabel">Categories</th> -->
	<th class="tablelabel"></th>

	<% @products.each do |p| %>
		<tr>
			<td class="productinfo"> <%= link_to p.name, product_path(p) %> </td>
			<td class="productinfo"> $<%= p.price %> </td>
			<!-- <td class="productinfo"> <%= p.categories.each { |x| x } %> </td> -->
			<td class="productinfo"> <%= link_to "Edit", edit_product_path(p) %> </td>
		</tr>
	<% end %>

</table>